// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"presentation": {
		"echo": false,
		"reveal": "always",
		"focus": false,
		"panel": "dedicated",
		"showReuseMessage": false
	},
	"tasks": [
		{
			"label": "Rush update",
			"type": "shell",
			"command": "rush update",
			"problemMatcher": [],
		},
		{
			"label": "buildVscodeExtension",
			"type": "npm",
			"script": "build",
			"group": "build",
			"path": "packages/vscode-extension",
			"problemMatcher": ["$ts-checker-webpack", "$ts-checker-eslint-webpack"],
			"options": {
				"cwd": "packages/vscode-extension"
			}
		},
		{
			"label": "watchBuildVscodeExtension",
			"type": "npm",
			"script": "watch",
			"group": "build",
			"path": "packages/vscode-extension",
			"isBackground": true,
			"problemMatcher": ["$ts-checker-webpack-watch", "$ts-checker-eslint-webpack-watch"],
			"options": {
				"cwd": "packages/vscode-extension"
			}
		},
		{
			"label": "buildTests",
			"type": "shell",
			"command": "pnpm build-tests",
			"group": "build",
			"options": {
				"cwd": "packages/vscode-extension"
			}
		}
	]
}