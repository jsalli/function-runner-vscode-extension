{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "baseUrl": "./packages",
    "paths": {
      "@functionrunner/shared/*": ["shared/src"],
      "@functionrunner/javascript-typescript-handler/*": ["javascriptTypescriptHandling/handler/src"],
      "@functionrunner/javascript-typescript-invoking-code-creator/*": ["javascriptTypescriptHandling/invoking-code-creator/src"],
      "@functionrunner/javascript-typescript-shared/*": ["javascriptTypescriptHandling/shared/src"]
    }
  },
  "include": [
    "**/src/**/*.ts",
    "**/tests/**/*.ts",
    "**/webpack.config.ts",
    "**/webpack.config.test.ts"
  ],
  "exclude": [
    "**/dist",
    "**/build",
    "**/node_modules"
  ]
}